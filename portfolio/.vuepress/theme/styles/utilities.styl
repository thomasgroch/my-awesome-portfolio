@css {
    .hljs {
        @apply -mx-8 p-6 my-4 !important;
    }

    .md-paragraph_open {
        @apply mb-2;
    }

    .md-heading_open {
        @apply text-grey-600 mb-2 mt-8 border-l-8 -ml-8 pl-6 border-teal;
    }

    .md-link_open {
        @apply text-teal-600 no-underline;
    }

    .md-link_open:hover {
        @apply text-teal-500;
    }

    .md-image {
        @apply block mx-auto max-w-full;
    }
}
